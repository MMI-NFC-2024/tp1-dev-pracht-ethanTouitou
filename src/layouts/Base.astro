---
// src/layouts/Base.astro
import "../styles/global.css";
const { title = "Plot + Astro", description = "" } = Astro.props;
const path = Astro.url.pathname;
const isActive = (href: string) => path === href;
---

<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        {description && <meta name="description" content={description} />}
    </head>

    <body
        class="min-h-screen bg-white text-slate-800 antialiased flex flex-col"
    >
        <!-- Header -->
        <header class="border-b border-slate-200">
            <div
                class="mx-auto max-w-6xl px-4 h-14 flex items-center justify-between"
            >
                <a href="/" class="font-semibold tracking-tight"
                    >Plot + Astro (SSR)</a
                >

                <nav class="flex items-center gap-2">
                    <a
                        href="/"
                        class={`px-3 py-1.5 rounded-md text-sm font-medium ${
                            isActive("/")
                                ? "bg-indigo-600 text-white"
                                : "text-slate-700 hover:bg-slate-100"
                        }`}
                    >
                        Penguins
                    </a>
                    <a
                        href="/examples"
                        class={`px-3 py-1.5 rounded-md text-sm font-medium ${
                            isActive("/examples")
                                ? "bg-indigo-600 text-white"
                                : "text-slate-700 hover:bg-slate-100"
                        }`}
                    >
                        AAPL
                    </a>
                </nav>
            </div>
        </header>

        <!-- Main -->
        <main class="flex-1 mx-auto max-w-5xl px-4 py-8 w-full">
            <slot />
        </main>

        <!-- Footer -->
        <footer class="border-t border-slate-200">
            <div
                class="mx-auto max-w-6xl px-4 h-12 flex items-center justify-between text-xs text-slate-500"
            >
                <span>MMI • Observable Plot + Astro (SSR via JSDOM)</span>
                <span>© {new Date().getFullYear()}</span>
            </div>
        </footer>
    </body>
</html>
